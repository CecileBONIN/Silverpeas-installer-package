<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>distribution-linux</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>bin</outputDirectory>
      <directory>src/main/scripts</directory>
      <filtered>true</filtered>
      <fileMode>775</fileMode>
      <includes>
        <include>**/*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>bin</outputDirectory>
      <directory>src/main/silverpeas</directory>
      <includes>
        <include>**/pom.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>setup</outputDirectory>
      <directory>src/main/config</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
      <excludes>
        <exclude>**/windows/*.xml</exclude>
        <exclude>**/linux/*.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <outputDirectory>setup/settings</outputDirectory>
      <source>src/main/config/settings/linux/SilverpeasSettings.xml</source>
      <filtered>false</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>bin/jar</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>